{
  "name": "frontend_builder_boilerplate",
  "version": "2.2.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "gulp build",
    "dev": "nodemon --watch gulpfile.js --watch package.json --ext js,json,styl --exec gulp dev",
    "prettify": "prettier src/templates/**/*.pug src/scripts/**/*.js --write",
    "validate": "gulp validate",
    "imagemin": "gulp imagemin"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:khv2online/frontend_builder_boilerplate.git"
  },
  "author": "khv2online@gmail.com",
  "license": "UNLICENSED",
  "devDependencies": {
    "@prettier/plugin-pug": "^1.15.3",
    "gulp-connect": "^5.7.0",
    "gulp-debug": "^4.0.0",
    "gulp-html": "^3.4.2",
    "gulp-imagemin": "^7.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "jshint": "^2.13.0",
    "stylint": "^2.0.0"
  },
  "dependencies": {
    "argv": "0.0.2",
    "autoprefixer": "^10.2.6",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-esbuild": "^0.8.2",
    "gulp-filter": "^7.0.0",
    "gulp-if": "^3.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-progeny": "^0.4.1",
    "gulp-pug": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylus": "^2.7.0",
    "gulp-touch-fd": "^2.0.0",
    "postcss": "^8.3.5",
    "yargs": "^17.0.1"
  },
  "optionalDependencies": {
    "swiper": "^6.6.2",
    "bootstrap": "5.0.1"
  },
  "jshintConfig": {
    "maxerr": 99,
    "bitwise": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "latedef": true,
    "noarg": true,
    "nonbsp": true,
    "nonew": true,
    "plusplus": true,
    "undef": true,
    "unused": true,
    "strict": true,
    "maxparams": 3,
    "varstmt": true,
    "esversion": 11,
    "browser": true,
    "devel": true,
    "leanswitch": true,
    "noreturnawait": true,
    "regexpu": true,
    "singleGroups": true,
    "predef": [
      "__DEBUG__"
    ],
    "globals": {}
  },
  "prettier": {
    "printWidth": 99,
    "endOfLine": "lf",
    "tabWidth": 2
  },
  "browserslist": [
    ">1%",
    "not IE 11",
    "not dead"
  ]
}
