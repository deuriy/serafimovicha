.SwiperPagination
	display grid
	grid-auto-flow column
	align-items center
	justify-content center
	height 20px
	
	&_bullet
		width 8px
		height 8px
		margin-right 16px
		border-radius 50%
		background $white
		cursor pointer
		@extend .transition
		
		@media $xlMinus
			width 6px
			height 6px
			margin-right 11px
		
		@media $smMinus
			width 8px
			height 8px
			margin-right 16px
		
		@media $xs
			width 6px
			height 6px
			margin-right 14px
		
		&:last-child
			margin-right 0
		
		&:hover
			background $brown
		
		&-active
			width 20px
			height 20px
			border 2px solid $brown
			background transparent
			
			@media $xlMinus
				width 16px
				height 16px
			
			@media $smMinus
				width 20px
				height 20px
			
			@media $xs
				width 16px
				height 16px
	
	&-darkBlue
		.SwiperPagination_bullet:not(.SwiperPagination_bullet-active)
			background $darkBlue