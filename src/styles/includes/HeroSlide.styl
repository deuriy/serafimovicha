.HeroSlide
  position relative
  display grid
  grid-template-columns 630px
  height 100%
  align-content end
  padding-bottom 97px
  padding-left 486px
  background-position 0 0
  background-size cover
  background-repeat no-repeat
  color $white
  
  @media $xlMinus
    padding-bottom 69px
    padding-left 347px
  
  @media $smMinus
    padding-bottom 96px
    padding-left 32px
    background-position 70% 0
  
  @media $xs
    height auto
    min-height 522px
    padding-bottom 129px
    padding-left 15px
    background-position 77% 0
  
  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background linear-gradient(0deg, rgba(45, 47, 51, 0.1), rgba(45, 47, 51, 0.1)), linear-gradient(0deg, rgba(205, 120, 88, 0.1), rgba(205, 120, 88, 0.1))

    @media $smMinus
      background rgba($darkBrown, .3)
    
    @media $xs
      background rgba($darkBrown, .6)
  
  &_text
    z-index 1
    width 300px
    margin-bottom 8px
    font-size 18px
    line-height 1.78
    letter-spacing 0.02em
    
    @media $xlMinus
      width 220px
      font-size 13px
    
    @media $smMinus
      width 300px
      font-size 18px
    
    @media $xs
      margin-bottom 16px
      line-height 1.34
  
  &_title
    z-index 1

    @media $xs
      width 233px
