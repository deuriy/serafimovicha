.Form
	width 490px
	max-width 100%

	@media $xlMinus
		width 350px
	
	&_title
		margin-bottom 81px
		text-align center

		@media $xlMinus
			margin-bottom 60px
		
		@media $smMinus
			margin-bottom 71px
		
		@media $xs
			margin-bottom 34px
	
	&_text,
	&_submitBtn
		width 100%
		height 96px
		padding-right 30px
		padding-left 30px
		border 1px solid $orange
		outline none
		background transparent
		font-weight 600
		font-size 14px
		line-height 1.571428
		text-align center
		text-transform uppercase

		@media $xlMinus
			height 68px
			// font-size 10px
			font-size 13px
		
		@media $smMinus
			height 96px
			font-size 14px
	
	&_submitBtn
		display grid
		grid-auto-flow column
		justify-content center
		align-items center
		border-top none
		font-family $baseFont
		cursor pointer
		@extend .transition
		
		&::after
			content ""
			width 36px
			// height 12px
			padding-top 26.1%
			margin-left 10px
			background url("data:image/svg+xml,%3Csvg width='36' height='12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M29.52 6.429H0V5.57h29.52L28 0c2.08 2.4 5.36 4.629 8 6-2.64 1.371-5.92 3.6-8 6l1.52-5.571z' fill='%23201600'/%3E%3C/svg%3E") 0 0 / contain no-repeat
			@extend .transition
			
			@media $xlMinus
				width 24px
		
		&:hover
			background-color $orange
			color $white
			
			&::after
				background-image url("data:image/svg+xml,%3Csvg width='36' height='12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M29.52 6.429H0V5.57h29.52L28 0c2.08 2.4 5.36 4.629 8 6-2.64 1.371-5.92 3.6-8 6l1.52-5.571z' fill='%23fff'/%3E%3C/svg%3E")
	
	&_description
		margin-top 15px
		text-align center
		font-size 14px
		line-height 1.42857

		@media $xlMinus
			font-size 13px
		
		@media $smMinus
			margin-top 18px
			font-size 14px
		
		a
			color $black
			
			&:hover
				text-decoration none
	
	&-formSectionLeft
		@media $xlMinus
			width auto
		
		@media $smMinus
			width 490px
		
		@media $xs
			width auto