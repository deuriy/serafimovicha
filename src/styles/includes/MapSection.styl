.MapSection
	position relative
	
	&_container
		width 1650px
		max-width 100%
		padding 78px 0 121px 344px
		
		@media $xlMinus
			width 1170px
			padding 58px 0 73px 244px
		
		@media $smMinus
			padding 78px 0 87px 0
		
		@media $xs
			padding 47px 0 49px
	
	&_title
		margin-bottom 74px
		
		@media $xlMinus
			margin-bottom 51px
		
		@media $smMinus
			margin-bottom 72px
			padding-left 30px
		
		@media $xs
			margin-bottom 24px
			padding-left 16px
	
	&_icons
		margin-bottom 40px

		@media $xlMinus
			margin-bottom 33px
		
		@media $smMinus
			margin-bottom 43px
		
		@media $xs
			margin-bottom 36px
	
	&_textAndStatistics
		display grid
		grid-template-columns minmax(auto, 500px) minmax(auto, 680px)
		justify-content space-between
		column-gap 30px

		@media $smMinus
			grid-template-columns 1fr
			padding-right 30px
			padding-left 30px
		
		@media $xs
			padding-right 16px
			padding-left 16px
	
	&_text
		line-height 1.625
		letter-spacing 0.02em

		@media $xlMinus
			font-size 14px
			line-height 1.62
			letter-spacing 0
		
		@media $smMinus
			margin-bottom 35px
			font-size 16px
			letter-spacing 0.02em
		
		@media $xs
			margin-bottom 30px
			line-height 1.75
	
	&_statistics
		margin-left 9px

		@media $smMinus
			margin-left 0