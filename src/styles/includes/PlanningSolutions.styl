.PlanningSolutions
  padding 80px 0 67px
  
  @media $xlMinus
    padding 57px 0 50px
  
  @media $smMinus
    padding 79px 0 73px
  
  @media $xs
    padding 48px 0
  
  &_header
    display grid
    width 1270px
    max-width 100%
    grid-template-columns repeat(2, auto)
    justify-content space-between
    align-items end
    margin-right auto
    margin-left auto
    margin-bottom 44px
    padding-right 20px
    padding-left 20px
    
    @media $xlMinus
      margin-bottom 30px
    
    @media $smMinus
      grid-template-columns 1fr
      margin-bottom 44px
      padding-right 33px
      padding-left 33px
    
    @media $xs
      margin-bottom 32px
      padding-right 0
      padding-left 0
  
  &_title
    @media $smMinus
      margin-bottom 14px
    
    @media $xs
      margin 0 15px 24px
