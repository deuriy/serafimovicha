.Navbar
	display grid
	align-content space-between
	// grid 1fr / 1fr
	width 392px
	max-width 100%
	height 100vh
	padding 71px 30px 116px 69px
	background $darkBrown
	
	&_logo
		margin-bottom 50px
	
	&_mainMenu
		margin-top 90px
		margin-bottom 30px
	
	&_btn
		justify-self start
	
	&-offCanvas
		position fixed
		z-index 1000
		top 0
		left 0
		transform translateX(-100%)
		@extend .transition
	
	&-opened
		transform translateX(0)