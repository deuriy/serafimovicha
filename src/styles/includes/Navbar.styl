.Navbar
	display grid
	align-content space-between
	width 392px
	max-width 100%
	height 100vh
	padding 71px 30px 116px 69px
	background $darkBrown
	
	@media $xlMinus
		width 279px
		padding 51px 20px 82px 51px
	
	@media $smMinus
		width 100%
		padding 32px 33px 42px 32px
	
	@media $xs
		overflow auto
	
	&_icons
		justify-self end
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		column-gap 8px
	
	&_mainMenu
		margin-top 140px
		margin-bottom 30px
		
		@media $xlMinus
			margin-top 70px
			margin-bottom 30px
		
		@media $smMinus
			margin-top 0
			margin-right 10px
			margin-bottom 100px
			grid-area 2 / 1 / 3 / -1
	
	&_btn
		justify-self start

		@media $xs
			grid-area 4 / 1 / 5 / -1
			justify-self end
	
	&_contacts
		@media $smMinus
			display grid
			justify-items end
			padding-right 7px
			padding-left 20px
		
		@media $xs
			grid-area 3 / 1 / 4 / -1
	
	&_phone
		margin-bottom 2px
	
	&-offCanvas
		position fixed
		z-index 1000
		top 0
		left 0
		transform translateX(-100%)
		@extend .transition
	
	&-heroSection
		@media $smMinus
			position fixed
			z-index 1000
			top 0
			left 0
			grid-template-columns repeat(2, 1fr)
			transform translateX(-100%)
			@extend .transition
	
	&-opened
		transform translateX(0)