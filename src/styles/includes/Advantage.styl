.Advantage
	display grid
	grid 1fr / auto 1fr
	align-items end
	color $white
	
	&_imgWrapper
		position relative
		font-size 0
	
	&_img
		&-overlay
			position absolute
			// top calc(50% - 45px)
			// left 100px
			bottom 0
			left 21.2%
	
	&_sectionTitle
		position absolute
		top 6.6%
		right -78%
		width 604px
	
	&_textWrapper
		width 488px
		max-width 100%
		margin-bottom 132px
		margin-left 154px
	
	&_title
		margin-bottom 0.8em
		color $brown
		font-weight normal
		font-size 40px
		font-family $forum 
	
	&_text
		line-height 1.625
	
	&-reverse
		align-items start
		// grid-template-columns auto 1080px
		grid-template-columns 1fr auto
		
		.Advantage_textWrapper
			order -1
			width 384px
			margin 97px 0 0 0
		
		.Advantage_imgWrapper
			// text-align right
			padding-bottom 24.6%
	
	&-alignCenter
		align-items center
		
		.Advantage_textWrapper
			width 500px
			margin-bottom 200px
			margin-left 171px