.About
	position relative
	z-index 10
	background url('../img/bg_about.png') right 146px / auto no-repeat, linear-gradient(0deg, $white 0%, $beige 100%)
	overflow hidden
	
	@media $xlMinus
		background-position right 51.5%
		background-size 63.8% auto
	
	@media $smMinus
		background url('../img/bg_about_tablet.png') right 455px / auto no-repeat, linear-gradient(0deg, $white 0%, $beige 100%)
	
	@media $xs
		background url('../img/bg_about_mob.png') right 475px / 228px auto no-repeat, linear-gradient(0deg, $white 0%, $beige 100%)
	
	&_contactsBlock
		position absolute
		z-index 10
		top 0
		right 0
	
	&_container
		position relative
		width 1060px
		max-width 100%
		padding-top 145px
		padding-left 344px
		
		@media $xlMinus
			padding-top 104px
			padding-left 245px
		
		@media $smMinus
			padding-top 50px
			padding-right 30px
			padding-left 32px
		
		@media $xs
			padding-top 32px
			padding-right 15px
			// padding-bottom 100px
			padding-left 15px
	
	&_title
		margin-bottom 24px
		
		@media $xlMinus
			margin-bottom 16px
		
		@media $smMinus
			margin-bottom 24px
		
		@media $xs
			margin-bottom 18px
	
	&_text
		width 480px
		max-width 100%
		margin-bottom 3em
		font-size 18px
		line-height 1.89
		letter-spacing 0.02em
		
		@media $xlMinus
			width 335px
			margin-bottom 43px
			font-size 14px
			letter-spacing 0.01em
		
		@media $smMinus
			width auto
			margin-bottom 59px
			font-size 18px
			letter-spacing 0.02em
		
		@media $xs
			margin-bottom 40px
			font-size 16px
			line-height 1.75
		
		p
			margin-bottom 1.8em

			@media $xs
				margin-bottom 1em
			
			&:last-child
				margin-bottom 0
	
	&_statistics
		margin-bottom 116px
		
		@media $xlMinus
			margin-bottom 88px
		
		@media $smMinus
			margin-bottom 28px
	
	&_circleImg
		margin-left -142px
		
		@media $xlMinus
			margin-left -104px
		
		@media $smMinus
			margin-left -106px
		
		@media $xs
			margin-left -114px
		
