.PlanSolution
	width 384px
	max-width 100%
	padding 39px 30px 20px
	border 1px solid rgba($darkBlue, 10%)
	
	&_imgWrapper
		text-align center
		margin-bottom 38px
	
	&_characteristics
		list-style none
		display grid
		grid 1fr / auto auto
	
	&_characteristic
		margin-right 30px
		
		&:last-child
			margin-right 0
	
	&_characteristicName
		margin-bottom 7px
		line-height 1.25
		color $brown
	
	&_characteristicValue
		font-size 24px
		line-height 1
		font-family $forum
		color $darkBlue
		
		sup
			position relative
			right 5px
			font-size 12px