.BtnOutline
	position relative
	display inline-grid
	// height 3.4286em
	height 48px
	max-width 100%
	// padding-right 24px
	// padding-left 24px
	padding-right 1.7143em
	padding-left 1.7143em
	place-items center
	border 1px solid $white
	color $white
	font-weight 600
	font-size 14px
	text-transform uppercase
	text-decoration none
	@extend .transition
	
	@media $xlMinus
		height 44px
		font-size 13px
	// 	height 34px
	// 	padding-right 16px
	// 	padding-left 16px
	// 	font-size 10px

	@media $smMinus
		width 288px
		height 48px
		font-size 14px
	
	&:hover
		background-color $white
		color $darkBrown
	
	&-arrowRight
		&::after
			content ""
			position absolute
			top 0
			right -15px
			bottom 0
			width 36px
			height 12px
			margin auto
			background $darkBrown url("data:image/svg+xml,%3Csvg viewBox='0 0 36 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M29.52 6.429H0V5.57h29.52L28 0c2.08 2.4 5.36 4.629 8 6-2.64 1.371-5.92 3.6-8 6l1.52-5.571z' fill='%23CD7858'/%3E%3C/svg%3E") 0 0 / 100% auto no-repeat
			
			@media $xlMinus
				right -22px
			
			@media $smMinus
				display none
		
		&:hover::after
			display none