              p Квартал на «Серафимовича» — это невысокие, полностью кирпичные дома, 9 этажей, в комплексе спроектирован подземный теплый паркинг. Комплекс будет состоять из 2-х домов (195 квартир)
    .PlanningSolutions.Tabs
      .PlanningSolutions_header
        h2.SectionTitle.SectionTitle-brown.PlanningSolutions_title Планировочные #[br]решения
        .Tabs_listWrapper
          ul.Tabs_list
            li(data-index="0").Tabs_item Студии
            li(data-index="1").Tabs_item 1-комнатные
            li(data-index="2").Tabs_item.Tabs_item-active 2-комнатные
            li(data-index="3").Tabs_item 3-комнатные
      .PlanningSolutions_content.Tabs_container
        - for (var i = 0; i < 4; i++)
          .Tabs_content
            .PlanningSolutionsSlider.swiper-container.Container.Container-planningSolutionsSlider(id="PlanningSolutionsSlider" + i)
              .swiper-wrapper
                - for(var j = 0; j < 7; j++) {
                  .swiper-slide.PlanningSolutionsSlider_slide
                    include ./blocks/PlanSolution
                - }
              .SwiperPagination.SwiperPagination-darkBlue
            button(type="button").CircleBtn.CircleBtn-brown.CircleBtn-next.hidden-smMinus
    .ApartmentChoosing#ApartmentChoosing
      include ./blocks/LeftSidebar
      .ApartmentChoosing_left
        .ApartmentChoosing_leftInner
          .ApartmentChoosing_leftHeader.hidden-mdPlus
            button(type="button" data-action="closeHousePlan").ApartmentChoosing_closeBtn
            h3.ApartmentChoosing_subtitle 5 этаж
          h2.SectionTitle.ApartmentChoosing_title.hidden-smMinus Выбор квартиры
          .HousePlan.ApartmentChoosing_housePlan
            img(src="/img/house_plan.png", alt="План дома").HousePlan_img
            .RealEstate.HousePlan_realEstate
              h4.RealEstate_title 2 комнатная
              .RealEstate_textWrapper
                .RealEstate_apartmentNumber Квартира № 108
                ul.RealEstate_characteristics
                  li.RealEstate_characteristic
                    .RealEstate_characteristicName Площадь:
                    .RealEstate_characteristicValue 42 м #[sup 2]
                  li.RealEstate_characteristic
                    .RealEstate_characteristicName Стоимость:
                    .RealEstate_characteristicValue 7 503 840 ₽
      .ApartmentChoosing_right
        h3.ApartmentChoosing_subtitle.hidden-smMinus 5 этаж
        h2.SectionTitle.ApartmentChoosing_title.hidden-mdPlus Выбор квартиры
        .ApartmentChoosing_imgWrapper
          img(src="/img/house.png", alt="5 этаж").ApartmentChoosing_img.hidden-smMinus
          a(href="#" data-action="openHousePlan").ApartmentChoosing_link.hidden-mdPlus
            img(src="/img/house_tablet.png", alt="5 этаж").ApartmentChoosing_img
    .MapSection
      include ./blocks/LeftSidebar
      .MapSection_container
        h2.SectionTitle.MapSection_title Инфраструктура
        .MapSection_map
          img(src="/img/map.png" alt="Инфраструктура").MapSection_mapImg
          //- img(src="/img/map_tablet.png" alt="Инфраструктура").MapSection_mapImg.hidden-mdPlus.hidden-xs
          //- img(src="/img/map_tablet.png" alt="Инфраструктура").MapSection_mapImg.hidden-smPlus
        .MapIcons.MapSection_icons
          ul.MapIcons_list
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper
                  img(src="/img/map_icons/all.svg" alt="Все").MapIcon_icon
                h4.MapIcon_title Все
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper
                  img(src="/img/map_icons/health.svg" alt="Здоровье").MapIcon_icon
                h4.MapIcon_title Здоровье
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper.MapIcon_iconWrapper-darkBg
                  img(src="/img/map_icons/education.svg" alt="Образование").MapIcon_icon
                h4.MapIcon_title Образование
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper.MapIcon_iconWrapper-darkBg
                  img(src="/img/map_icons/food.svg" alt="Питание").MapIcon_icon
                h4.MapIcon_title Питание
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper
                  img(src="/img/map_icons/sport.svg" alt="Спорт").MapIcon_icon
                h4.MapIcon_title Спорт
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper.MapIcon_iconWrapper-darkBg
                  img(src="/img/map_icons/shop.svg" alt="Магазины").MapIcon_icon
                h4.MapIcon_title Магазины
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper
                  img(src="/img/map_icons/park.svg" alt="Парки").MapIcon_icon
                h4.MapIcon_title Парки
            li.MapIcons_item
              .MapIcon
                .MapIcon_iconWrapper
                  img(src="/img/map_icons/water.svg" alt="Водоемы").MapIcon_icon
                h4.MapIcon_title Водоемы
