        .swiper-wrapper
          .swiper-slide
            .Advantage.Advantage-modernArchitecture.Advantages_item
              .Advantage_imgWrapper
                img(src="/img/advantage_1_mob.png" alt="Все самое лучшее — для вас").Advantage_img
